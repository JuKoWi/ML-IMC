# Global parameters
systemFiles     = Ar_95K.in             # List of input filenames for each system
mode            = training              # Run MC sampling (simulation) or ML-IMC optimization (training)
descent         = unrestricted          # Mean loss can increase during the training
#modelname      = model-iter-25.bson    # Name of a trained model file (simulation mode)

# Monte Carlo parameters
steps           = 5000                  # Total number of MC steps
Eqsteps         = 500                   # Equilibration MC steps
stepAdjustFreq  = 50                    # Frequency of MC step adjustment   
trajout         = 0                     # XTC trajectory frequency
outfreq         = 500                   # Output frequency


# Network parameters
minR            = 2.0                   # Min distance for G2 symmetry function, Å
maxR            = 10.0                  # Max distance for G2 symmetry function, Å
sigma           = 3.0                   # Sigma from Gaussian distribution in Å, corresponds η = 1/√(2σ) parameter in G2 symmetry function
                                        # recommended values in Å: 0.8 -- 2 Å
                                        #                       η: 0.8 -- 0.125

neurons         = 5                     # Number of neurons in the network (excluding the energy output neuron)
iters           = 1                     # Number of learning iterations
activation      = identity              # Activation function
                                        # for more info: https://fluxml.ai/Flux.jl/stable/training/optimisers/
optimizer       = NAdam                 # Optimizer type 
rate            = 0.1                   # Learning rate
rateAdjust      = 1                     # Rate multiplier (should be < 1 to reduce the rate) DEPRECATED
momentum        = 0.9                   # Momentum / Nesterov Momentum coefficient
decay1          = 0.9                   # Decay of momentum (decay_1, decay_2)
decay2          = 0.999
