# Global parameters
systemFiles     = Ar_95K.in             # List of input filenames for each system
mode            = training              # Run MC sampling (simulation) or ML-IMC optimization (training)
inputmodel      = random                # Specify a model name or "random" for random initialization

# Monte Carlo parameters
steps          = 1000000             # Total number of MC steps
Eqsteps        = 500000              # Equilibration MC steps
stepAdjustFreq = 50000               # Frequency of MC step adjustment   
trajout        = 50000               # XTC trajectory frequency
outfreq        = 50000               # Output frequency

# Network parameters
minR            = 2.0                   # Min distance for G2 symmetry function, Å
maxR            = 10.0                  # Max distance for G2 symmetry function, Å
sigma           = 1                     # Sigma from Gaussian distribution in Å, corresponds η = 1/√(2σ) parameter in G2 symmetry function
                                        # recommended values in Å: 0.8 -- 2 Å
                                        #                       η: 0.8 -- 0.125

neurons         = 10                    # Number of neurons in the network (excluding the energy output neuron)
iters           = 2                     # Number of learning iterations
activation      = tanh                  # Activation function
                                        # for more info: https://fluxml.ai/Flux.jl/stable/training/optimisers/
optimizer       = NAdam              # Optimizer type 
rate            = 0.5                   # Learning rate
momentum        = 0.9                   # Momentum / Nesterov Momentum coefficient
decay1          = 0.9                   # Decay of momentum (decay_1, decay_2)
decay2          = 0.999
